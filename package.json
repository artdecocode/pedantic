{
  "name": "pedantry",
  "version": "1.0.0",
  "description": "Read a directory recursively as a stream in Node.js.",
  "main": "build",
  "scripts": {
    "t": "zoroaster -b",
    "test": "zoroaster -b test/spec",
    "test-build": "BABEL_ENV=test-build yarn test",
    "test-all": "yarn-s test test-build",
    "test-watch": "yarn test -w",
    "lint": "eslint .",
    "doc": "doc README-source.md -o README.md",
    "e": "node example",
    "example/": "yarn e example/Pedantry.js",
    "build": "babel src --out-dir build --source-maps"
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/artdecocode/pedantry.git"
  },
  "keywords": [
    "pedantry",
    "read",
    "directory",
    "stream",
    "fs",
    "filesystem"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artdecocode/pedantry/issues"
  },
  "homepage": "https://github.com/artdecocode/pedantry#readme",
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.51",
    "@babel/core": "7.0.0-beta.51",
    "@babel/plugin-syntax-object-rest-spread": "7.0.0-beta.51",
    "@babel/plugin-transform-modules-commonjs": "7.0.0-beta.51",
    "@babel/register": "7.0.0-beta.51",
    "babel-plugin-transform-rename-import": "2.2.0",
    "catchment": "2.0.1",
    "documentary": "1.4.0",
    "eslint": "4.19.1",
    "eslint-config-artdeco": "1.0.0",
    "snapshot-context": "2.0.1",
    "yarn-s": "1.1.0",
    "zoroaster": "2.1.0"
  },
  "dependencies": {
    "@wrote/read-dir-structure": "1.0.0"
  }
}
