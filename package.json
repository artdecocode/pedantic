{
  "name": "pedantry",
  "version": "2.3.0",
  "description": "Read a directory recursively as a stream in Node.js.",
  "main": "build/index.js",
  "module": "src/index.js",
  "scripts": {
    "t": "zoroaster -a",
    "spec": "yarn t test/spec",
    "mask": "yarn t test/spec",
    "test": "yarn t test/spec test/mask",
    "test-build": "ALAMODE_ENV=test-build yarn test",
    "lint": "eslint .",
    "doc": "NODE_DEBUG=doc doc documentary -o README.md",
    "d": "NODE_DEBUG=doc doc src/index.js -g",
    "b": "alamode src -o build -s",
    "build": "yarn-s d b doc",
    "e": "node example",
    "example/": "yarn e example/Pedantry.js"
  },
  "files": [
    "build",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/artdecocode/pedantry.git"
  },
  "keywords": [
    "pedantry",
    "read",
    "directory",
    "dir",
    "folder",
    "readable",
    "stream",
    "fs",
    "filesystem"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artdecocode/pedantry/issues"
  },
  "homepage": "https://github.com/artdecocode/pedantry#readme",
  "devDependencies": {
    "alamode": "1.8.6",
    "catchment": "3.2.2",
    "documentary": "1.23.0",
    "eslint-config-artdeco": "1.0.1",
    "yarn-s": "1.1.0",
    "zoroaster": "3.11.1"
  },
  "dependencies": {
    "@wrote/read-dir-structure": "1.0.2"
  }
}
