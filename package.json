{
  "name": "pedantry",
  "version": "2.4.0",
  "description": "Read a directory recursively as a stream in Node.js.",
  "main": "build/index.js",
  "module": "src/index.js",
  "scripts": {
    "t": "zoroaster -a",
    "spec": "yarn t test/spec",
    "mask": "yarn t test/mask",
    "test": "yarn t test/spec test/mask",
    "test-build": "ALAMODE_ENV=test-build yarn test",
    "lint": "eslint .",
    "doc": "NODE_DEBUG=doc doc -o README.md",
    "d": "typal src/index.js",
    "b": "alamode src -o build -s",
    "build": "yarn-s d b doc",
    "e": "node example",
    "example/": "yarn e example/Pedantry.js"
  },
  "files": [
    "build",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/artdecocode/pedantry.git"
  },
  "keywords": [
    "pedantry",
    "read",
    "directory",
    "dir",
    "folder",
    "readable",
    "stream",
    "fs",
    "filesystem"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artdecocode/pedantry/issues"
  },
  "homepage": "https://github.com/artdecocode/pedantry#readme",
  "devDependencies": {
    "alamode": "^2.3.4",
    "catchment": "^3.3.0",
    "documentary": "^1.27.3",
    "eslint-config-artdeco": "1.0.1",
    "yarn-s": "1.1.0",
    "zoroaster": "^4.1.1-alpha"
  },
  "dependencies": {
    "@wrote/read-dir-structure": "^1.2.0"
  }
}
